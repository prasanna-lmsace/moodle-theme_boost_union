{{!
    @template theme_boost_union/core_form/element-colorpicker

    Template for the form color picker element.

    Example context (json):
    {
        "element": "",
        "icon": "<i class='fa fa-loading'></i>"
    }
}}

{{< core_form/element-template }}
    {{$element}}
        <div class="admin_colourpicker clearfix">
            {{#icon}}
                {{>core/pix_icon}}
            {{/icon}}
        </div>
        <input type="text"
                class="form-control {{#error}}is-invalid{{/error}}"
                name="{{element.name}}"
        {{#element.frozen}}
                readonly {{#element.hardfrozen}}disabled{{/element.hardfrozen}}
        {{/element.frozen}}
                id="{{element.id}}"
                value="{{element.value}}"
                {{#element.size}}size="{{element.size}}"{{/element.size}}
                {{#error}}
                    autofocus aria-describedby="{{element.iderror}}"
                {{/error}}
                {{{element.attributes}}} >
        {{#haspreviewconfig}}
            <input type="button" id="{{id}}_preview" value="{{#cleanstr}}preview{{/cleanstr}}" class="admin_colourpicker_preview">
        {{/haspreviewconfig}}
    {{/element}}
{{/ core_form/element-template }}
